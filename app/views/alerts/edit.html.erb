<%=form_for [@alert] do |f|%>

<div class="form-group">
  <%=f.label :condition, class: "col-sm-2 control-label"%>
  <div class="col-sm-10">
    <%=f.text_field :condition, class: "form-control"%>
  </div>
</div>

<div class="form-group">
  <%=f.label :value, class: "col-sm-2 control-label"%>
  <div class="col-sm-10">
    <%=f.text_field :value, class:"form-control"%>
  </div>
</div>

<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
<%=f.submit "Update alert", class: "btn btn-default"%>
  </div>
</div>

<%end%>
