
<div class="container">

  <div class="row center">
    <h2>Sign up</h2>

  </div>
  <div class="row">

  
    <div class="form-group" style="text-align:center;color:#ff0000">
      <p><strong><%if flash[:failure]%>        
        <% flash.each do |key, value| %>
          <div class="alert alert-<%= key %>"><%= value %></div>
        <% end %>
      <%end%></strong></p>
    </div>

    <% if @errors %>
    <ul class="collection col s12 m6 push-m3">
      <div class="row center">
        <%@errors.each do |error| %>
          <%=render "shared/error", locals: {error: error}%>
        <%end%>
      </div>
    </ul>
    <%end%>    
  </div>

  <div class="row">
    <div class="col  push-m2 m8">

    <%=form_for @user, class: "form-horizontal" do |f|%>
    <fieldset>

      <div class="col s6">
        <%= f.label :first_name%>
        <%= f.text_field :first_name, class:"validate" %>
      </div>


      <div class="col s6">
        <%= f.label :last_name%>
        <%= f.text_field :last_name, class:"validate" %>
      </div>

      <div class="col s12">
        <%= f.label :email, class:"control-label" %>
        <%= f.text_field :email %>
      </div>

      <div class="col s12">
        <%= f.label :phone, class:"col-sm-2 control-label" %>
        <%= f.text_field :phone, class:"form-control" %>
      </div>

      <div class="col s12">
        <%= f.label :password, class:"col-sm-2 control-label" %>
        <%= f.password_field :password, class:"form-control" %>
      </div>

    <div class="form-group center">
      <div class="col-sm-offset-2 col-s10">
        <%=f.submit "SIGN UP", class:"btn btn-default"%>
      </div>
    </div>
    </fieldset>
    <%end%>
    <br>
    </div>
  </div>
</div>
