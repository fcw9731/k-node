
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-8">

      <h1>My Address</h1>

      <h4>Address 1: <%=@address.address_one%></h4>
      <h4>Address 2: <%=@address.address_two%></h4>
      <h4>State: <%=@address.state%></h4>
      <h4>City: <%=@address.city%></h4>
      <h4>Post Code: <%=@address.post_code%></h4>

      <%=link_to edit_address_path(@address) do%>
        Edit Address
      <%end%>

      <%= button_to('Destroy', address_path(@address), class:"btn btn-danger",:method => 'delete') %>

    </div>
  </div>
</div>
