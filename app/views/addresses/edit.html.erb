
<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-4">
      <h1>Edit Address</h1>

      <%=form_for [@address], class: "form-vertical" do |f|%>
      <div class="form-group">

        <div class="input-group input-group-lg">
          <%=f.label :address_one%>
          <%=f.text_field :address_one, class: "form-control"%>
        </div>
      </div>

      <div class="form-group">
        <div class="input-group input-group-lg">
          <%=f.label :address_two%>
          <%=f.text_field :address_two, class: "form-control"%>
        </div>
      </div>

      <div class="form-group">
        <div class="input-group input-group-lg">
          <%=f.label :state%>
          <%=f.text_field :state, class: "form-control"%>
        </div>
      </div>

      <div class="form-group">
        <div class="input-group input-group-lg">
          <%=f.label :city%>
          <%=f.text_field :city, class: "form-control"%>
        </div>
      </div>

      <div class="form-group">
        <div class="input-group input-group-lg">
          <%=f.label :post_code%>
          <%=f.text_field :post_code, class: "form-control"%>
        </div>
      </div>

      <div class="form-group">
        <div class="input-group input-group-lg">
          <%=f.submit "Edit Address", class: "btn btn-primary"%>
        </div>
      </div>
      <%end%>
    </div>
  </div>
</div>
