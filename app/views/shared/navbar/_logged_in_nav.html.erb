            <br>
          </div>
          Volume <%=alert[:type]%> <%=alert[:data]%>
        </li>
      </div>
      <script>
        function delete<%=i%>() {
            var b<%=i%> = document.getElementById('b<%=i%>');

            if(b<%=i%>.onclick="delete<%=i%>();") {
              document.getElementById('alert<%=i%>').innerHTML = "";
              checkNotif();
            }
        }
      </script>
    <%end%>
  </div>
