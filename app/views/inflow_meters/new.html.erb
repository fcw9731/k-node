<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-4">
      <%=form_for @inflow_meter, url: farm_block_inflow_meters_path, method: :post do |f|%>
        <div class="input-group input-group-lg">
          <%=f.label :name%>
          <%=f.text_field :name, class: "form-control"%>
        </div>

        <div class="input-group input-group-lg">
          <%=f.label :calibration_unit%>
          <%=f.text_field :calibration_unit, class: "form-control"%>
        </div>

        <div class="input-group input-group-lg">
          <%=f.label :device_EUI%>
          <%=f.text_field :device_EUI, class: "form-control"%>
        </div>

        <div class="input-group input-group-lg">
          <%=f.label :daily_consent%>
          <%=f.text_field :daily_consent, class: "form-control"%>
        </div>

        <div class="form-group" style="text-align:center;color:#ff0000">
          <p><strong><%if flash[:failure]%>
            <%= render 'layouts/login_failure'%>
          <%end%></strong></p>          
        </div>        

        <div class="input-group input-group-lg">
          <%=f.submit "Submit", class: "btn btn-primary"%>
        </div>
      <%end%>
    </div>
  </div>
</div>
